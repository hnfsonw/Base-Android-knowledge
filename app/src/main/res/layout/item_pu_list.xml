<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_pu_list_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="10px"
        android:layout_marginTop="29px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_pu_list_imgurl"
            android:layout_width="216px"
            android:layout_height="162px"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="340px"
            android:layout_height="162px"
            android:layout_marginLeft="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_pu_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="朝阳-双井|100㎡"
                android:textColor="#333"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_item_pu_list_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:maxLines="1"
                android:singleLine="true"
                android:text="广平门黄平路平米，商铺fasdfasdf"
                android:textColor="#898989"
                android:textSize="28px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_pu_list_tag1"
                    android:layout_width="106px"
                    android:layout_height="32px"
                    android:layout_marginTop="28px"
                    android:gravity="center"
                    android:padding="1.5px"
                    android:text="临近地铁"
                    android:textColor="#63abff"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_item_pu_list_tag2"
                    android:layout_width="106px"
                    android:layout_height="32px"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="28px"
                    android:gravity="center"
                    android:padding="1.5px"
                    android:text="转让费"
                    android:textColor="#63abff"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_item_pu_list_tag3"
                    android:layout_width="106px"
                    android:layout_height="32px"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="28px"
                    android:gravity="center"
                    android:padding="1.5px"
                    android:text="最多四字"
                    android:textColor="#63abff"
                    android:textSize="24px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="133px"
            android:layout_height="40px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="30px"
            android:layout_marginTop="66px">

            <TextView
                android:id="@+id/tv_item_pu_list_money"
                android:layout_width="75px"
                android:layout_height="40px"
                android:gravity="right"
                android:text="6.76"
                android:textColor="#D75E56"
                android:textSize="38px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_pu_list_money_danwei"
                android:layout_width="75px"
                android:layout_height="30px"
                android:gravity="bottom"
                android:text="万/月"
                android:textColor="#D75E56"
                android:textSize="24px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>